    <path>mfd.ac</path>

<!-- Navigation page -->
	<model>
		<name>enav</name>
    <path>Aircraft/Tornado/Models/Interior/Instruments/MFD/enav-w.xml</path>
    <offsets> 
      <x-m>0.015</x-m>
      <y-m>-0.001</y-m>
      <z-m>0.006</z-m>
    </offsets>
	</model>
    <model>
	<name>Enav Buttons</name>
	    <path>Aircraft/Tornado/Models/Interior/Instruments/MFD/enav1-btn.xml</path>
	    <offsets> 
	      <x-m>0.0</x-m>
	      <y-m>0.0</y-m>
	      <z-m>0.0</z-m>
	</offsets>
	</model>


  <animation>
    <type>select</type>
    <object-name>enav</object-name>
    <object-name>Enav Buttons</object-name>
    <condition>
        <equals>
          <property>instrumentation/MFD[1]/page-selected</property>
          <value>enav</value>
        </equals>
    </condition>
  </animation>


<!-- Engine Management page -->
    <model>
	<name>Engine Status</name>
	    <path>Aircraft/Tornado/Models/Interior/Instruments/MFD/eng-status.xml</path>
