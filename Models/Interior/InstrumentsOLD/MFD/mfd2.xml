	      <x-m>0.002</x-m>
	      <y-m>0.0</y-m>
	      <z-m>0.0</z-m>
	</offsets>
	</model>
    <model>
	<name>Engine Status Buttons</name>
	    <path>Aircraft/Tornado/Models/Interior/Instruments/MFD/eng-status1-btn.xml</path>
	    <offsets> 
	      <x-m>0.0</x-m>
	      <y-m>0.0</y-m>
	      <z-m>0.0</z-m>
	</offsets>
	</model>
  <animation>
    <type>select</type>
    <object-name>Engine Status</object-name>    
    <object-name>Engine Status Buttons</object-name>    
    <condition>
        <equals>
          <property>instrumentation/MFD[1]/page-selected</property>
          <value>engman</value>
        </equals>
    </condition>
  </animation>

