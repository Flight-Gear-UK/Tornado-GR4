<?xml version="1.0"?>

  <PropertyList> 
    <path>mfd.ac</path>

<!-- Navigation page -->
	<model>
		<name>enav</name>
    <path>Aircraft/eurofighter/Models/Instruments/waypoint.xml</path>
  <offsets> 
	      <x-m>0.002</x-m>
	      <y-m>0.0</y-m>
	      <z-m>0.0</z-m>
	</offsets>
	</model>
    <model>
	<name>Enav Buttons</name>
	    <path>Aircraft/eurofighter/Models/Instruments/wpt0-btn.xml</path>
	    <offsets> 
	      <x-m>0.0</x-m>
	      <y-m>0.0</y-m>
	      <z-m>0.0</z-m>
	</offsets>
	</model>


  <animation>
    <type>select</type>
    <object-name>enav</object-name>
    <object-name>Enav Buttons</object-name>
    <condition>
        <equals>
          <property>instrumentation/MFD[0]/page-selected</property>
          <value>enav</value>
        </equals>
    </condition>
  </animation>


<!-- Engine Management page -->
    <model>
	<name>Engine Status</name>
