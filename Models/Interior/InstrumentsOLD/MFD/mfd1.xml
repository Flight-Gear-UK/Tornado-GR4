<!-- Radar page -->
    <model>
	<name>radar</name>
	    <path>Aircraft/eurofighter/Models/Instruments/radar.xml</path>
	    <offsets> 
	      <x-m>0.015</x-m>
	      <y-m>0.0091</y-m>
	      <z-m>0.006</z-m>
	    </offsets>
    </model>

	<animation>
	  <type>scale</type>
	  <object-name>radar</object-name>
	  <x-factor>1.0</x-factor>
	  <x-offset>1.0</x-offset>
	  <y-factor>1.0</y-factor>
	  <y-offset>1.4</y-offset>
	  <z-factor>1.0</z-factor>
	  <z-offset>1.4</z-offset>
		  <center>
			   <x-m>0.0</x-m>
			   <y-m>0.0</y-m>
			   <z-m>0.0</z-m>
		  </center>
	</animation>
  <animation>
    <type>select</type>
    <object-name>radar</object-name>      
    <condition>
        <equals>
          <property>instrumentation/MFD[0]/page-selected</property>
          <value>radar</value>
        </equals>
    </condition>
  </animation>

