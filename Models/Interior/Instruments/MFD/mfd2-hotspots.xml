					<command>property-toggle</command>
					<property>controls/HSD/on-off</property>
				</binding>
			</action>	

			<action>
				<name>L2</name>
				<button>0</button>
				<x>-252</x>
				<y>78</y>
				<w>50</w>
				<h>45</h>
