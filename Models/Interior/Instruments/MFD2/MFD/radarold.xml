<?xml version="1.0"?>

<!-- Radar, with 4 AI blips (green), 20/40 mile range   -->
<!--             4 MP blips (yellow), 20/40 mile range  -->
<!-- Must use with the JSBSim system "radar.xml"        -->
<!-- by Dave Culp                                       -->

<PropertyList>

 <path>radar.ac</path>

 <animation>
  <type>material</type>
  <object-name>screen</object-name>
   <emission>
     <red>0.0</red>
     <green>0.1</green>
     <blue>0.0</blue>
    <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission> 
 </animation> 

<!-- *************************************************-->
<!-- * TARGET 1  (AI) range 20 ***********************-->
<!-- *************************************************-->

 <animation>
  <type>select</type>
  <object-name>blip1</object-name>
<condition>
	<and>
       	<property>ai/models/aircraft[0]/radar/in-range</property>
	<less-than>
	<property>ai/models/aircraft[0]/radar/range-nm</property>
	<value>21</value>
	</less-than>
	<equals>
      	<property>fdm/jsbsim/systems/radar/range</property>
      	<value>20</value>
    	</equals>
	</and>
 </condition>
</animation>

 <animation>
  <type>translate</type>   
  <object-name>blip1</object-name>
  <property>ai/models/aircraft[0]/radar/x-shift</property>
  <factor>0.001625</factor>
  <axis>
   <y>1</y>
  </axis>
 </animation>
 <animation>
  <type>translate</type>   
  <object-name>blip1</object-name>
  <property>ai/models/aircraft[0]/radar/y-shift</property>
  <factor>0.001625</factor>
  <axis>
