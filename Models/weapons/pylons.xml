<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>pilons.ac</path>
  <animation>
    <object-name>pylon.L.1</object-name>
    <object-name>pylon.L.2</object-name>
	<object-name>pylon.C</object-name>
        <object-name>pylon.R.2</object-name>
    <object-name>pylon.R.1</object-name>
  </animation>

  <!-- pylon options -->
  <!--station left 1 -->
  <animation>
    <type>select</type>
    <object-name>pylon1.L</object-name>      
